<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elpsykngroo.com.gradecalculator.FragmentCreateGrade"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Subject Name"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSubject"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Passing Grade"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <Spinner
                    android:layout_height="40dp"
                    android:id="@+id/spPassing"
                    android:layout_width="match_parent"
                    style="@android:style/Widget.Spinner"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Percentage to Overall Grade"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Examination"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etExamination"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Quiz"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etQuiz"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Seatworks"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSeatwork"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Homework"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etHomework"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Project"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etProject"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Recitation"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etRecitation"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Lab Activity"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etLabAct"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Lab Exam"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etLabEx"
                    android:inputType="number"
                    android:background="@drawable/border_view" />
            </LinearLayout>

            <Button
                android:text="Create Grading System"
                android:layout_width="match_parent"
                android:id="@+id/btCreateGrade"
                android:layout_height="50dp"
                android:background="@color/blue_accent"
                android:textColor="@android:color/white"/>

        </LinearLayout>



    </ScrollView>


</FrameLayout>
